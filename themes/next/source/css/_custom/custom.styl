@media (min-width: 1200px){
  header{ width: 61% !important; }
  header.post-header {
    width: auto !important;
  }
  .container .main-inner { width: 61%; }
  .content-wrap { width: calc(100% - 235px); }
}

.header {
  +tablet() {
    width: auto !important;
  }
  +mobile() {
    width: auto !important;
  }
}

.container .main-inner {
  +tablet() {
    width: auto !important;
  }
  +mobile() {
    width: auto !important;
  }
}

.content-wrap {
  +tablet() {
    width: 100% !important;
  }
  +mobile() {
    width: 100% !important;
  }
}

